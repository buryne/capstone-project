{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["import"],
  "extends": "google",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "new-cap": "off",
    "semi": "off",
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    "linebreak-style": ["error", "windows"],
    "import/no-commonjs": "error" // Mencegah penggunaan CommonJS
  }
}
