<!-- allPosts.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Posts</title>
  <style>
    * {
      box-sizing: border-box;
      padding: 0;
      margin: 0;
    }

    body {
      font-family: 'Arial', sans-serif;
    }

    header {
      background-color: #333;
      color: white;
      padding: 1em;
      text-align: center;
      height: 150px;
    }

    ul {
      display: flex;
      justify-content: center;
      gap: 10px;
      list-style: none;
      padding: 12px 0;
    }

    a {
      color: white;
      text-decoration: none;
    }

    h1 {
      text-align: center;
      padding: 28px 0;
    }

    .card-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 20px;
      padding: 20px;
    }

    .card {
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s;
    }

    .card:hover {
      transform: scale(1.02);
    }

    .card img {
      width: 100%;
      height: 300px; /* Adjust as needed */
      object-fit: cover;
    }

    .card-content {
      padding: 15px;
    }

    .post-by {
      display: flex;
      align-items: center;
    }

    .post-by img {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .post-info {
      width: 100%;
      display: flex;
      justify-content: space-between;
    }

    .caption {
      color: #8d8b8b;
      line-height: 1.5;
      
    }

    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .tag {
      background-color: #007BFF;
      color: #fff;
      padding: 6px 12px;
      border-radius: 4px;
      font-size: 14px;
    }

    .location {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .location-icon {
      width: 20px;
      height: 20px;
      fill: #007BFF; /* Ganti dengan warna ikon yang diinginkan */
    }

    .location-text {
      font-size: 14px;
      color: #333;
    }

    .date {
      font-size: 14px;
      color: #8d8b8b;
    }

    .edit-link {
      text-decoration: none;
      color: #007BFF;
      font-size: 14px;
      transition: color 0.3s;
    }

    .edit-link:hover {
      color: #0056b3; /* Ganti dengan warna yang diinginkan saat tombol dihover */
    }
    .card-text {
      padding: 10px 0;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
  </style>
</head>

<body>
  <%- include('partials/header') %>
  <h1>All Posts</h1>
  <div class="card-container">
    <% posts.forEach(post => { %>
      <div class="card">
        <img src="<%= post.image %>" alt="Post Image">
        <div class="card-content">
          <div class="post-by">
            <img src="<%= post.user.photoURL %>" alt="User Photo">
            <div class="post-info">
              <p><%= post.user.displayName %></p>
              <p class="date"><%= post.create_at.toDate().toLocaleDateString() %></p>
            </div>
          </div>
          <div class="card-text">
            <h2><%= post.title %></h2>
            <p class="caption"><%= post.caption %></p>
            <div class="tags">
              <% post.tags.forEach(tag => { -%>
                <span class="tag"><%= tag %></span>
              <% }); %>
            </div>
            <div class="location">
              <svg class="location-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path
                  d="M12 2C8.13 2 5 5.13 5 9c0 3.78 5.55 10.75 6.41 11.74.09.12.22.26.36.26s.27-.14.36-.26C10.45 19.75 16 12.78 16 9c0-3.87-3.13-7-7-7zm0 9c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3z" />
              </svg>
              <p class="location-text"><%= post.location %></p>
            </div>
            <!-- <div class="date-info">
              <p>Updated: <%= post.update_at.toDate().toLocaleDateString() %></p>
            </div> -->
          </div>
          <!-- Edit if user login-->
          <% if (loggedInUser && post.user.uid === loggedInUser.uid) { %>
            <!-- Display edit button only for the posts created by the logged-in user -->
            <a href="/edit-post/<%= post.id %>" class="edit-link">Edit</a>
          <% } %>
        </div>
      </div>
    <% }); %>
  </div>
</body>
</html>
